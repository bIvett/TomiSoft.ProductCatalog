@using TomiSoft.ProductCatalog.BusinessModels;

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Termékkategóriák</h1>

<div class="row">
    <div class="col-3">
        <div class="treeview" id="categories"></div>
    </div>

    <div class="col-9">

    </div>
</div>


<script type="text/javascript">
    $(document).ready(() => {
        $("#categories").treeview({
            color: "#428bca",
            enableLinks: true,
            showTags: true,
            data: @{await Html.RenderPartialAsync("RenderCategoryTree", (IReadOnlyList<CategoryTreeNodeBM>)ViewBag.Categories.Nodes);}
        });
    });
</script>